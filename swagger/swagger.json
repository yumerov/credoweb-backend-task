{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Hospital API API"
    },
    "paths": {
        "/api/hospitals/{id}": {
            "get": {
                "summary": "Get hospital by ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Found",
                        "schema": {
                            "$ref": "#/definitions/Hospital"
                        }
                    },
                    "404": {
                        "description": "Hospital not found",
                        "schema": {
                            "$ref": "#/definitions/NotFound"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Hospital": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "address": {
                    "type": "string"
                },
                "phone": {
                    "type": "string"
                }
            }
        },
        "NotFound": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                }
            }
        }
    }
}