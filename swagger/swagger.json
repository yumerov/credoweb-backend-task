{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Hospital API API"
    },
    "paths": {
        "/api/hospitals/{id}": {
            "get": {
                "summary": "Get hospital by ID",
                "tags": ["Hospital"],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Found",
                        "schema": {
                            "$ref": "#/definitions/ReadHospital"
                        }
                    },
                    "404": {
                        "description": "Hospital not found",
                        "schema": {
                            "$ref": "#/definitions/NotFound"
                        }
                    }
                }
            },
            "put": {
                "summary": "Update hospital by ID",
                "tags": [
                    "Hospital"
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/CreateHospital"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Found",
                        "schema": {
                            "$ref": "#/definitions/ReadHospital"
                        }
                    },
                    "404": {
                        "description": "Hospital not found",
                        "schema": {
                            "$ref": "#/definitions/NotFound"
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete hospital by ID",
                "tags": [
                    "Hospital"
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Deleted"                        
                    },
                    "404": {
                        "description": "Hospital not found",
                        "schema": {
                            "$ref": "#/definitions/NotFound"
                        }
                    }
                }
            }
        },
        "/api/hospitals": {
            "post": {
                "summary": "Create Hospital",
                "tags": [
                    "Hospital"
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/CreateHospital"
                        }
                    }
                ],
            },
            "get": {
                "summary": "List Hospitals",
                "tags": [
                    "Hospital"
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "sort",
                        "in": "query",
                        "description": "Sort order",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "ASC",
                                "DESC"
                            ],
                            "default": "ASC"
                        }
                    }
                ]
            }
        },
        "/api/users/{id}": {
            "get": {
                "summary": "Get user by ID",
                "tags": [
                    "User"
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Found",
                        "schema": {
                            "$ref": "#/definitions/UserHospital"
                        }
                    },
                    "404": {
                        "description": "User not found",
                        "schema": {
                            "$ref": "#/definitions/NotFound"
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete user by ID",
                "tags": [
                    "User"
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Deleted"
                    },
                    "404": {
                        "description": "User not found",
                        "schema": {
                            "$ref": "#/definitions/NotFound"
                        }
                    }
                }
            }
        },
        "/api/users": {
            "post": {
                "summary": "Create User",
                "tags": [
                    "User"
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/CreateUser"
                        }
                    }
                ]
            }
        }
    },
    "definitions": {
        "CreateHospital": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "address": {
                    "type": "string"
                },
                "phone": {
                    "type": "string"
                }
            }
        },
        "CreateUser": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "workplaceId": {
                    "type": "integer"
                }
            }
        },
        "ReadHospital": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "address": {
                    "type": "string"
                },
                "phone": {
                    "type": "string"
                }
            }
        },
        "ReadUser": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "email": {
                    "type": "string"
                },
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "createdAt": {
                    "type": "date"
                },
                "workplace": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "integer"
                        },
                        "name": {
                            "type": "string"
                        },
                        "address": {
                            "type": "string"
                        },
                        "phone": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "NotFound": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                }
            }
        }
    }
}